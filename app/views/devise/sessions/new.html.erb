<div class="AccountFormWrapper">
  <div class="AccountFormContainer-login">
    <h2 class="AccountFormContainer_title text-center">
      ログイン
    </h2>
    <div class="AccountForm">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
        <%= f.label :email,class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password,class:"form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-4">
            <%= f.check_box :remember_me,class:"form-check-input" %>
            <%= f.label :remember_me,class:"form-check-label"%>
          </div>
        <% end %>

        <div class="d-grid gap-3">
          <%= f.submit "ログイン",class:"btn btn-primary" %>
          <%= link_to :new_user_registration,class:"btn btn-outline-secondary" do %>
            新しいアカウントを作成
          <% end %>
        </div>
      <% end %>
      <% if alert %>
        <div id="error_explanation" class="alert alert-danger mt-3">
          <ul>
            <p class="alert"><%= alert %></p>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
