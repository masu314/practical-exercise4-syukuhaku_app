<div class="container OwnRoomsContainer">
    <h3>登録済み一覧</h3>
    <table class="table">
        <thead>
            <tr>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>料金</th>
                <th>作成日</th>
            </tr>
        </thead>

        <tbody class="table-group-divider">
            <% @rooms.each do |room| %>
                <tr>
                    <td> 
                        <%= image_tag room.room_image.thumb130.url %>
                    </td>
                    <td>
                    <%= link_to room do %>
                    <%= room.room_name %>
                    <% end %>
                    </td>
                    <td><%= room.room_introduction %></td>
                    <td>¥<%= room.room_price %>~</td>
                    <td><%= room.created_at.strftime('%Y/%m/%d') %></td>

                    <td>
                        <div class="dropdown">
                            <div data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical "></i>
                            </div>
                            <ul class="dropdown-menu">
                            <li><%= link_to "編集", [:edit, room] ,class:"dropdown-item" %></li>
                            <li><%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } ,class:"dropdown-item" %></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<%= render "shared/footer" %>