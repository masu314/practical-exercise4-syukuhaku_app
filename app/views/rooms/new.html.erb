<div class="FormWrapper">
  <div class="FormContainer">
    <h3 class="mb-4">新規登録</h3>
    
    <%= form_with model: @room do |f| %>
      <div class="row mb-3">
        <%= f.label :room_name ,"施設名",class:"col-sm-2 col-form-label required" %>
        <div class="col-sm-10">
          <%= f.text_field :room_name,class:"form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :room_introduction ,"施設詳細",class:"col-sm-2 col-form-label required" %>
        <div class="col-sm-10">
          <%= f.text_area :room_introduction,class:"form-control"  %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :room_price ,"料金",class:"col-sm-2 col-form-label required" %>
        <div class="col-sm-10">
          <%= f.number_field :room_price,class:"form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :room_address ,"住所",class:"col-sm-2 col-form-label required" %>
        <div class="col-sm-10">
        <%= f.text_field :room_address,class:"form-control" %>
        </div>
      </div>
      <div class="row mb-4">
        <%= f.label :room_image ,"施設画像",class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.file_field :room_image,class:"form-control" %>
        </div>
      </div>
    <div class="d-grid gap-3">
      <%= f.submit "登録完了する",class:"btn btn-primary"%>
      <%= link_to :back, class:"btn btn-outline-secondary" do %>
        キャンセル
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>